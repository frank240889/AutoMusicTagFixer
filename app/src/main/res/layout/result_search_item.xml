<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_content_found_track"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_found_cover_art"
        android:layout_width="@dimen/image_view_cover_item"
        android:layout_height="@dimen/image_view_cover_item"
        android:layout_marginStart="@dimen/default_margin"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:transitionName="cover_art_element"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_album_white_48px" />

    <TextView
        android:id="@+id/tv_found_track_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_half_margin"
        android:drawableStart="@drawable/ic_music_note_white_24px"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/tv_found_track_artist_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_found_track_artist_name"
        tools:text="Mi Historia Entre Tus Dedos" />

    <TextView
        android:id="@+id/tv_found_track_artist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_found_track_name"
        android:layout_marginStart="@dimen/default_half_margin"
        android:layout_marginEnd="@dimen/default_half_margin"
        android:drawableStart="@drawable/ic_account_circle_white_24px"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/iv_found_cover_art"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_found_cover_art"
        app:layout_constraintTop_toTopOf="@+id/iv_found_cover_art"
        tools:text="Gianluca Grignani" />

    <TextView
        android:id="@+id/tv_found_track_album_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_found_track_artist_name"
        android:layout_marginEnd="@dimen/default_half_margin"
        android:drawableStart="@drawable/ic_album_white_24px"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_found_track_artist_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_found_track_artist_name"
        tools:text="Gianluca Grignani" />

</androidx.constraintlayout.widget.ConstraintLayout>