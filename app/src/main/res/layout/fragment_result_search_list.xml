<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_content_result_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <TextView
        android:id="@+id/found_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"
        android:text="@string/type_your_song_and_press_search"
        android:textSize="18sp" />
    <androidx.recyclerview.widget.RecyclerView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/found_tracks_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="true"
        android:choiceMode="singleChoice"
        android:scrollbarSize="18dp"
        app:fastScrollHorizontalThumbDrawable="@drawable/drawable_thumb"
        app:fastScrollHorizontalTrackDrawable="@drawable/line_drawable"
        app:fastScrollVerticalThumbDrawable="@drawable/drawable_thumb"
        app:fastScrollVerticalTrackDrawable="@drawable/line_drawable"
        app:fastScrollEnabled="true"
        android:clipToPadding="false"
        tools:listitem="@layout/result_search_item"/>
</FrameLayout>
