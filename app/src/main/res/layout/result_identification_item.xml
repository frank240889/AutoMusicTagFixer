<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cover_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/cardview_default_elevation"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:stateListAnimator="@animator/default_z_transformation_card_view"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ProgressBar
            android:id="@+id/preview_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/trackid_cover"
            android:layout_width="@dimen/image_view_only_cover_results_size"
            android:layout_height="@dimen/image_view_only_cover_results_size"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:cropToPadding="false"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_album_white_48px"
            android:transitionName="transitionFragment"
            app:srcCompat="@drawable/ic_album_white_48px" />
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/trackid_cover_dimensions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cover_card"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_photo_size_select_large_white_24px"
        android:gravity="center_vertical"
        android:singleLine="true"
        tools:text="1080 * 1080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cover_card" />

    <TextView
        android:id="@+id/track_id_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_music_note_white_24px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trackid_cover_dimensions"
        tools:text="Mi historia entre tus dedos."
        tools:visibility="visible" />

    <TextView
        android:id="@+id/track_id_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/track_id_title"
        android:layout_alignStart="@+id/track_id_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_account_circle_white_24px"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/track_id_title"
        tools:text="GianlucaGrignani"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/trackid_album"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/track_id_artist"
        android:layout_alignStart="@+id/track_id_artist"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_album_white_24px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/track_id_artist"
        tools:text="GianlucaGrignani"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/trackid_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trackid_album"
        android:layout_alignStart="@+id/trackid_album"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_queue_music_white_24px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trackid_album"
        tools:text="Pop Italiano"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/track_id_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/trackid_genre"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/trackid_genre"
        android:drawableStart="@drawable/ic_format_list_numbered_white_24px"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trackid_genre"
        tools:text="1"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/track_id_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/trackid_genre"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/track_id_number"
        android:drawableStart="@drawable/ic_date_range_white_24px"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/track_id_number"
        tools:text="1999"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>