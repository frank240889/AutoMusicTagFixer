<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container_track_id_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="false"
    android:layout_margin="8dp"
    android:theme="@style/DetailsTrackDialogTheme"
    android:background="@color/grey_900"
    android:splitMotionEvents="false">

    <TextView
        android:id="@+id/title_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="20sp"
        android:text="@string/results_found"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/cover_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="@dimen/cardview_default_elevation"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:stateListAnimator="@animator/default_z_transformation_card_view"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_results">

        <ImageView
            android:id="@+id/trackid_cover"
            android:layout_width="@dimen/image_view_cover_results_size"
            android:layout_height="@dimen/image_view_cover_results_size"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_album_white_48px"
            android:transitionName="transitionFragment"
            app:srcCompat="@drawable/ic_album_white_48px" />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/trackid_cover_dimensions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cover_card"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_photo_size_select_large_white_24px"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/no_cover_art_found"
        app:layout_constraintEnd_toEndOf="@+id/cover_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cover_card" />

    <TextView
        android:id="@+id/track_id_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trackid_cover_dimensions"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_music_note_white_24px"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cover_card"
        app:layout_constraintTop_toTopOf="@+id/cover_card"
        tools:text="Mi historia entre tus dedos."
        tools:visibility="visible" />

    <TextView
        android:id="@+id/track_id_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/track_id_title"
        android:layout_alignStart="@+id/track_id_title"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_account_circle_white_24px"
        android:gravity="center_vertical"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:text="GianlucaGrignani"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/cover_card"
        app:layout_constraintTop_toBottomOf="@+id/track_id_title"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/trackid_album"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/track_id_artist"
        android:layout_alignStart="@+id/track_id_artist"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_album_white_24px"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:text="GianlucaGrignani"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cover_card"
        app:layout_constraintTop_toBottomOf="@+id/track_id_artist"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/trackid_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trackid_album"
        android:layout_alignStart="@+id/trackid_album"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/ic_queue_music_white_24px"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:text="Pop Italiano"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cover_card"
        app:layout_constraintTop_toBottomOf="@+id/trackid_album"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/track_id_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/trackid_genre"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/trackid_genre"
        android:drawableStart="@drawable/ic_format_list_numbered_white_24px"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cover_card"
        app:layout_constraintTop_toBottomOf="@+id/trackid_genre"
        tools:text="1"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/track_id_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/trackid_genre"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/track_id_number"
        android:drawableStart="@drawable/ic_date_range_white_24px"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cover_card"
        app:layout_constraintTop_toBottomOf="@+id/track_id_number"
        tools:text="1999"
        tools:visibility="visible" />

    <CheckBox
        android:id="@+id/checkbox_rename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trackid_genre"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:includeFontPadding="false"
        android:text="@string/message_checkbox_rename"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trackid_cover_dimensions" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/label_rename_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkbox_rename"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:labelFor="@id/rename_to"
        android:theme="@style/CustomEditTextHint"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_rename"
        tools:visibility="visible">

        <EditText
            android:id="@+id/rename_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_rename" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/message_rename_hint"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_below="@id/label_rename_to"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/message_rename"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_rename_to"
        tools:visibility="visible" />

    <Button
        android:id="@+id/missing_tags_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/all_tags"
        android:theme="@style/Button.Flat.Primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title" />

    <Button
        android:id="@+id/all_tags_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/missing_tags"
        app:layout_constraintBottom_toBottomOf="@+id/missing_tags_button"
        app:layout_constraintEnd_toStartOf="@+id/missing_tags_button"
        app:layout_constraintTop_toTopOf="@+id/missing_tags_button"
        app:layout_constraintVertical_bias="0.0"
        android:theme="@style/Button.Flat.Primary"/>

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/message_results"
        android:textColor="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_rename_hint" />
</android.support.constraint.ConstraintLayout>