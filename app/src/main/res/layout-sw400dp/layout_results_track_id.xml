<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trackIdItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_gravity="start"
    android:layout_margin="8dp"
    android:splitMotionEvents="false">

    <android.support.v7.widget.CardView
        android:id="@+id/cover_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:stateListAnimator="@animator/default_z_transformation_card_view"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/trackid_cover"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_album_white_48px"
            android:transitionName="transitionFragment"
            app:srcCompat="@drawable/ic_album_white_48px" />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/trackid_cover_dimensions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cover_card"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/ic_photo_size_select_large_white_24px"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="8dp"
        android:text="@string/no_cover_art_found" />

    <TextView
        android:id="@+id/track_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/trackid_cover_dimensions"
        android:drawableStart="@drawable/ic_music_note_white_24px"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/title"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/track_id_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/track_id_title"
        android:layout_below="@+id/track_id_title"
        android:drawableStart="@drawable/ic_account_circle_white_24px"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/artist"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/trackid_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/track_id_artist"
        android:layout_below="@+id/track_id_artist"
        android:drawableStart="@drawable/ic_album_white_24px"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/album"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/trackid_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/trackid_album"
        android:layout_below="@+id/trackid_album"
        android:drawableStart="@drawable/ic_queue_music_white_24px"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/genre"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/track_id_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/trackid_genre"
        android:layout_below="@+id/trackid_genre"
        android:drawableStart="@drawable/ic_format_list_numbered_white_24px"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/track_number"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/track_id_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/track_id_number"
        android:layout_below="@+id/track_id_number"
        android:drawableStart="@drawable/ic_date_range_white_24px"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/track_year"
        android:textSize="14sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/checkbox_rename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/track_id_year"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="@string/message_checkbox_rename" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/label_rename_to"
        android:labelFor="@id/rename_to"
        android:layout_below="@id/checkbox_rename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:visibility="gone"
        android:theme="@style/CustomEditTextHint">
        <EditText
            android:id="@+id/rename_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_rename"/>
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/message_rename_hint"
        android:layout_below="@id/label_rename_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="12sp"
        android:visibility="gone"
        android:text="@string/message_rename"/>
</RelativeLayout>