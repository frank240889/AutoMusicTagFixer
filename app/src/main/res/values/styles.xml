<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="toolbarStyle">@style/Widget.AutomusicTagFixer.MaterialToolbar</item>
        <item name="navigationViewStyle">@style/Widget.AutomusicTagFixer.NavigationView</item>
        <item name="extendedFloatingActionButtonStyle">@style/Widget.AutomusicTagFixer.ExtendedFloatingActionButton</item>
        <item name="snackbarStyle">@style/Widget.AutomusicTagFixer.Snackbar</item>
        <!--item name="snackbarTextViewStyle">@style/Widget.AutomusicTagFixer.Snackbar.TextStyle</item-->
        <item name="textInputStyle"> @style/Widget.AutomusicTagFixer.TextInputLayout</item>
        <item name="bottomSheetDialogTheme">@style/Widget.AutomusicTagFixer.BottomSheetDialogTheme</item>
        <item name="materialCardViewStyle">@style/Widget.AutomusicTagFixer.MaterialCardView</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApp.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApp.LargeComponent</item>
        <item name="materialButtonStyle">@style/Widget.AutomusicTagFixer.ColoredButton</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.AutomusicTagFixer.OutlinedButton</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
        <item name="android:navigationBarColor">@color/dark_gray</item>
        <item name="popupMenuStyle">@style/ShapeAppearanceOverlay.AutomusicTagFixer.PopupMenu</item>
        <!--item name="colorPrimaryVariant">pr</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>
        <item name="colorButtonNormal">@color/buttonNormal</item>
        <item name="colorControlNormal">@color/controlNormal</item>
        <item name="colorControlActivated">@color/controlActivated</item>
        <item name="colorControlHighlight">@color/controlHighlight</item>
        <item name="colorBackgroundFloating">@color/backgroundFloating</item-->
    </style>

    <style name="ShapeAppearance.MyApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.MyApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.MyApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget.AutomusicTagFixer.MaterialToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/toolbarTextColor</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.AutomusicTagFixer.Toolbar</item>
    </style>

    <style name="ThemeOverlay.AutomusicTagFixer.Toolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="iconTint">@color/iconColor</item>
    </style>

    <style name="Widget.AutomusicTagFixer.NavigationView" parent="Widget.Design.NavigationView">
        <item name="android:background">@drawable/bg_rounded_navigation_view</item>
        <item name="android:backgroundTint">@color/navigationDrawerBackgroundTint</item>
        <item name="itemIconTint">@color/iconColor</item>
        <item name="itemTextColor">@color/iconColor</item>
    </style>

    <style name="NavigationViewTop">
        <item name="android:background">@drawable/bg_rounded_navigation_top_view</item>
        <item name="android:backgroundTint">@color/navigationDrawerTopBackgroundColor</item>
    </style>

    <!--Theming all extended fabs-->
    <style name="Widget.AutomusicTagFixer.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="backgroundTint">@color/extendedColorFabButton</item>
        <item name="tint">@color/primaryFabTextColor</item>
    </style>

    <style name="Widget.AutomusicTagFixer.Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@drawable/bg_snackbar</item>
    </style>

    <!--style name="Widget.AutomusicTagFixer.Snackbar.TextStyle" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/snackbarTextBackgroundColor</item>
    </style-->

  <!--Theming material filled buttons-->
    <style name="Widget.AutomusicTagFixer.ColoredButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryColorButton</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="iconTint">@color/dark_gray</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!--Theming material outlined buttons-->
    <style name="Widget.AutomusicTagFixer.OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:colorPressedHighlight">@color/primaryOutlinedColorButton</item>
        <item name="android:textColor">@color/primaryOutlinedColorButton</item>
        <item name="iconTint">@color/primaryOutlinedColorButton</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.AutomusicTagFixer.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AutomusicTagFixer.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="ThemeOverlay.AutomusicTagFixer.TextInputEditText.OutlinedBox" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="colorPrimary">@color/colorControlHighlight</item>
        <item name="colorControlNormal">@color/colorControlHighlight</item>
    </style>

    <style name="Widget.AutomusicTagFixer.BottomSheetDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="materialButtonStyle">@style/Widget.AutomusicTagFixer.ColoredButton</item>
        <item name="bottomSheetStyle">@style/Widget.AutomusicTagFixer.BottomSheet</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Widget.AutomusicTagFixer.BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/RoundedShapeBottomSheetDialog</item>
    </style>

    <style name="RoundedShapeBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget.AutomusicTagFixer.MaterialCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.AutomusicTagFixer.MaterialCardView</item>
    </style>

    <style name="ShapeAppearanceOverlay.AutomusicTagFixer.MaterialCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

  <style name="ShapeAppearanceOverlay.AutomusicTagFixer.PopupMenu" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>
